DATABASE_URL=your_database_url_here

# =============================================================================
# Upwork API Credentials
# =============================================================================
# Get these from: https://www.upwork.com/developer
# Follow the OAuth2 flow to obtain access and refresh tokens
UPWORK_CLIENT_ID=your_client_id_here
UPWORK_CLIENT_SECRET=your_client_secret_here
UPWORK_ACCESS_TOKEN=your_access_token_here
UPWORK_REFRESH_TOKEN=your_refresh_token_here

# =============================================================================
# AI Provider Configuration
# =============================================================================

# AI Provider Selection (choose one: openai, claude, gemini)
AI_PROVIDER=openai

# Provider API Keys (set the one you're using)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Model Selection (provider-specific)
# OpenAI models: gpt-4o-mini, gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
# Claude models: claude-sonnet-4-20250514, claude-opus-4, claude-haiku-3
# Gemini models: gemini-pro, gemini-pro-vision
AI_MODEL=gpt-4o-miniopic_api_key_here

# =============================================================================
# Google Sheets Integration
# =============================================================================
# Path to your Google service account credentials JSON file
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials.json

# Your Google Spreadsheet ID (found in the sheet URL)
# Example: https://docs.google.com/spreadsheets/d/YOUR_SPREADSHEET_ID/edit
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# =============================================================================
# Optional: Notifications
# =============================================================================
# Slack webhook URL for notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email for notifications (optional)
# NOTIFICATION_EMAIL=your-email@example.com

# =============================================================================
# Application Settings
# =============================================================================
# Set to 'development' or 'production'
ENVIRONMENT=development

# Enable debug logging (true/false)
DEBUG=true

# Calendly link for scheduling interviews
CALENDLY_LINK=https://calendly.com/your-link
